<MudDialog DisableSidePadding="false">
	<DialogContent>
		<div style="width:300px;" class="pb-4 mt-4">
			<MudText Typo="Typo.h6">创建新角色</MudText>
			<EditForm Model="RoleModel" OnValidSubmit="CreateSubmit" style="width:100%;">
				<DataAnnotationsValidator />
				<MudTextField Class="mt-4" @bind-Value="RoleModel.RoleName" Variant="Variant.Outlined" Margin="Margin.Dense"
							  Label="请输入角色名称" For="@(() => RoleModel.RoleName)"
							  UserAttributes="InputAttributes"></MudTextField>
				<div class="mt-4">
					<MudButton Variant="Variant.Filled" FullWidth="true" Color="Color.Primary" Size="Size.Small"
							   ButtonType="ButtonType.Submit" StartIcon="@Icons.Material.Filled.Upload">提交</MudButton>
				</div>
			</EditForm>
		</div>
	</DialogContent>
</MudDialog>